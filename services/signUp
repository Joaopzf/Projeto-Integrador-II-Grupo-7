  // ROTA PARA CADASTRO DO USUÁRIO
  router.post('/signUp', async (req: Request, res: Response): Promise<void> => {
    const { nome, email, senha } = req.body; // Extrai os dados do corpo da requisição (nome, email, senha)

    try {
      const connection = await banco.getConnection(); // Obtém uma conexão do pool de conexões

      // Executa uma query SQL para inserir o usuário na tabela 'usuarios'
      await connection.execute(
        `INSERT INTO usuarios (nome, email, senha) VALUES (:nome, :email, :senha)`, // Query de inserção
        { nome, email, senha }, // Parâmetros para o SQL
        { autoCommit: true } // Confirma automaticamente a transação
      );

      await connection.close(); // Fecha a conexão com o banco de dados
      res.status(201).send('Usuário cadastrado com sucesso'); // Resposta de sucesso com status 201
    } catch (err) {
      console.error('Erro ao cadastrar: ', err); // Exibe o erro no console em caso de falha
      res.status(400).send('Erro ao cadastrar'); // Resposta de erro com status 400
    }
  });
